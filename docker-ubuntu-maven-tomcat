FROM ubuntu:18.04
RUN apt update && \
apt install git openjdk-8-jdk wget maven -y
WORKDIR /tmp/
RUN wget https://downloads.apache.org/tomcat/tomcat-10/v10.0.12/bin/apache-tomcat-10.0.12-deployer.tar.gz && \
tar xvf apache-tomcat*.tar.gz && \
rm -rf apache-tomcat*.tar.gz
RUN mkdir /usr/local/tomcat && \
cp /tmp/apache-tomcat*/ /usr/local/tomcat/
RUN git clone https://github.com/efsavage/hello-world-war && cd hello-world-war
RUN mvn package
RUN cp /tmp/hello-world-war/target/hello*.war /usr/local/tomcat/webapps/
EXPOSE 8080
CMD ["/usr/local/tomcat/bin/catalina.sh", "run"]